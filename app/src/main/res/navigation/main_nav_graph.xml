<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.neosoft.myapplication.navigation.HomeFragment"
        android:label="Home "
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_viewTransactionFragment"
            app:destination="@id/viewTransactionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chooseReceiverFragment"
            app:destination="@id/chooseReceiverFragment" />
        <action
            android:id="@+id/action_homeFragment_to_viewBalenceFragment"
            app:destination="@id/viewBalenceFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewTransactionFragment"
        android:name="com.neosoft.myapplication.navigation.ViewTransactionFragment"
        android:label="Transaction"
        tools:layout="@layout/fragment_view_transaction" >
        <action
            android:id="@+id/action_viewTransactionFragment_to_sendCashFragment"
            app:launchSingleTop="false"
            app:popUpToInclusive="false">
            <argument
                android:name="amt"
                android:defaultValue="10"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/chooseReceiverFragment"
        android:name="com.neosoft.myapplication.navigation.ChooseReceiverFragment"
        android:label="Receiver"
        tools:layout="@layout/fragment_choose_receiver" >
        <action
            android:id="@+id/action_chooseReceiverFragment_to_sendCashFragment"
            app:destination="@id/sendCashFragment" />

    </fragment>
    <fragment
        android:id="@+id/sendCashFragment"
        android:name="com.neosoft.myapplication.navigation.SendCashFragment"
        android:label="Send Cash -{receiverName}"
        tools:layout="@layout/fragment_send_cash">

        <argument
            android:name="receiverName"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="amt"
            android:defaultValue="10L"
            app:argType="string" />
        <action
            android:id="@+id/action_sendCashFragment_to_confirmDialogFragment"
            app:destination="@id/confirmDialogFragment" />
        <action
            android:id="@+id/action_sendCashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/viewBalenceFragment"
        android:name="com.neosoft.myapplication.navigation.ViewBalenceFragment"
        android:label="View Balence"
        tools:layout="@layout/fragment_view_balence" />
    <dialog
        android:id="@+id/confirmDialogFragment"
        android:name="com.neosoft.myapplication.navigation.ConfirmDialogFragment"
        android:label="ConfirmDialogFragment"
        tools:layout="@layout/fragment_confirm_dialog">
        <argument
            android:name="receiverName"
            app:argType="string" />
        <argument android:name="amount" />
    </dialog>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.neosoft.myapplication.navigation.SettingsFragment"
        android:label="Setting" />
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.neosoft.myapplication.navigation.AboutAppFragment"
        android:label="AboutApp" /><action android:id="@+id/action_global_aboutAppFragment" app:destination="@id/aboutAppFragment"/>
</navigation>